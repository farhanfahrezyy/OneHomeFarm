<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/layoutVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:background="@drawable/background_stroke"
        app:cardBackgroundColor="@color/neutral_N30"
        android:layout_marginVertical="@dimen/_3sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        android:elevation="@dimen/_5sdp">

        <RelativeLayout
            android:id="@+id/card1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_80sdp"
            android:gravity="center">

            <ImageView
                android:id="@+id/VideoImage"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="@dimen/_2sdp"
                android:scaleType="centerCrop"
                android:maxWidth="@dimen/_130sdp"
                android:src="@drawable/gambar5" />

            <TextView
                android:id="@+id/VideoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/VideoImage"
                android:layout_marginTop="@dimen/_9sdp"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_9sdp"
                android:layout_toEndOf="@id/VideoImage"
                android:gravity="top"
                android:text="Mengoptimalkan Hasil Pertanian Anda: Teknik Terbaru dan Strategi ..."
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/VideoTitle"
                android:layout_marginEnd="@dimen/_9sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_toEndOf="@id/VideoImage"
                android:gravity="start"
                android:fontFamily="@font/poppins_regular"
                android:text="12 Mar 2002"
                android:textColor="@color/neutral_N300"
                android:textSize="@dimen/_8ssp"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>